@model NovoControleProjetos.Models.Iniciativa


@{
    // Layout = null;
    var texto = "Orçamento";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <div class="container" style="padding-top:15px">
        <form>

            <div class="row">

                <div class="col-lg-8">
                    <label for="nome-projeto">Nome Projeto</label>
                    <input type="text" id="nome-projeto" name="nome-projeto" data-id="@Model.Id_Iniciativa" class="form-control" value="@Model.Nome_Iniciativa" />
                </div>

                <div class="col-md-2">
                    <label for="iniciativa">Iniciativa</label>
                    <input type="text" id="iniciativa" name="iniciativa" class="form-control" />
                </div>

                <div class="col-md-2">
                    <label for="data-aprovacao">Data Aprovação</label>
                    <input type="date" id="data-aprovacao" name="data-aprovacao" class="form-control" />
                </div>
            </div>

            <div class="row">

                <div class="col-sm-3">
                    <label for="cpf-iniciativa">CPF</label>
                    <input type="text" id="cpf-iniciativa" name="cpf-iniciativa" class="form-control" />
                </div>

                <div class="col-sm-3">
                    <label for="responsavel-neg">Responsável Negócio</label>
                    <input type="text" id="responsavel-neg" name="responsavel-neg" class="form-control" />
                </div>

                <div class="col-sm-3">
                    <label for="responsavel-ds">Responsável DS</label>
                    <input type="text" id="responsavel-ds" name="responsavel-ds" class="form-control" />
                </div>

                <div class="col-sm-3">
                    <label for="inputEsteira">Esteira</label>
                    @{Html.RenderAction("_ListaEsteiras", "Esteira");}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label for="inpuDepartamento">Departamento</label>
                    @{Html.RenderAction("_ListaDepartamentos", "Departamento");}
                </div>
                <div class="col-sm-2">
                    <label for="etapa">Etapa</label>
                    <input type="text" id="etapa" name="etapa" class="form-control" />
                </div>
                <div class="col-sm-2">
                    <label for="outro">outro campo</label>
                    <input type="text" id="outro" name="outro" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label for="cores">Farol</label>
                    @{ Html.RenderAction("_ListaFarol", "Farol");}
                </div>
                <div class="col-md-3">
                    <label for="comentario-farol">Comentario</label>
                    <textarea maxlength="240" class="form-control" id="comentario-farol"></textarea>
                </div>
            </div>

            <div class="row">
                <label for="form-parcial-orcamento" style=" padding-left: 15px; color:brown" data-toggle="tooltip" data-placement="left" title="@texto"> Orçamento:</label>
                @{Html.RenderAction("_Create", "Orcamento");}
            </div>

            <div class="row">
                <label for="form-parcial-etapa" style=" padding-left: 15px; color:brown"> Etapas previstas:</label>
                @{Html.RenderAction("_ListaEtapas", "Etapa");}
            </div>

            <div class="row">
                <label for="form-parcial-jornada" style=" padding-left: 15px; color:brown"> Informações da Jornada:</label>
                @{Html.RenderAction("_Create", "Jornada");}
            </div>

            <div class="row">

                <div class="col-sm-3">
                    <label for="vpl">VPL</label>
                    <input type="text" id="vpl" name="vpl" class="form-control" />
                </div>

                <div class="col-sm-3">
                    <label for="tf-versao-agencia">TF Agencia</label>
                    <input type="text" id="tf-versao-agencia" name="tf-versao-agencia" class="form-control" />
                </div>

                <div class="col-sm-3">
                    <label for="tf-versao-pa">TF PA</label>
                    <input type="text" id="tf-versao-pa" name="tf-versao-pa" class="form-control" />
                </div>

                <div class="col-sm-3">
                    @*fazer contextos de prioridade*@
                    <label for="inputEsteira">Prioridade</label>
                    @{Html.RenderAction("_ListaEsteiras", "Esteira");}
                </div>
            </div><br />
            <div class="pull-right">
                <button type="button" class="btn btn-default" id="update-iniciativa">
                    <span class="glyphicon glyphicon-save"></span> Salvar
                </button>
            </div>

        </form>
    </div>

</body>
</html>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/JS/iniciativa.js"></script>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>




