@model NovoControleProjetos.Models.Iniciativa




<form id="form-iniciativa" style="margin-top:15px;">

    <div class="row">

        <div class="col-md-2" style="padding-right: 0px; padding-left: 0px;">

            <label for="num-iniciativa">Nº iniciativa</label>
            <input type="text" id="num-iniciativa" name="num-iniciativa" class="form-control" />

        </div>

        <div class="col-md-6">
            <label for="nome-projeto">Nome Projeto</label>
            @*<input id="nome-projeto" type="text" class="form-control" style="min-width: 100%;" />*@
            <input type="text" id="nome-projeto" name="nome-projeto" data-id="@Model.Id_Iniciativa" class="form-control" value="@Model.nome_iniciativa"  style="min-width: 100%;" />
        </div>

        <div class="col-md-2" style="padding-left:0">

            <label for="inpuDepartamento">Departamento</label>
            @*@{Html.RenderAction("_ListaDepartamentos", "Departamento");}*@

            @{Html.RenderAction("_ListaDepartamentos", "Departamento", new { @id_departamento = Model.id_departamento });}

        </div>

        <div class="col-md-2">

            <label for="data-aprovacao">Data Aprovação</label>
            <input type="text" id="data-aprovacao" name="data-aprovacao" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />

        </div>
    </div>

    <div class="row" style="padding-top:15px;">

        <div class="col-md-2">

            <div class="row">
                <label for="cores">Farol</label>
                @{ Html.RenderAction("_ListaFarol", "Farol");}

            </div>
            <div class="row">
                <label for="esteira">Esteira</label>
                @{Html.RenderAction("_ListaEsteiras", "Esteira");}
            </div>

            <div class="row">
                <label for="etapa">Etapa</label>
                @{Html.RenderAction("_ListaEtapas", "Etapa", new { tipoLista = "drop" });}
            </div>

        </div>

        <div class="col-md-6">

            <div class="row">
                <label style="margin-left:18px">Comentário</label>
                <textarea id="comentario-farol" rows="8" class="form-control" style="margin-left: 17px; min-width: 90%;"></textarea>
            </div>

        </div>


        <div class="col-md-2" style="padding-left: 0px; margin-left: 0px;">
            @*<label for="form-parcial-orcamento" style=" padding-left: 15px; color:brown" data-toggle="tooltip" data-placement="left" title="@texto"> Orçamento:</label>*@
            @*@{Html.RenderAction("_Create", "Orcamento");}*@
           
        


                @Html.Partial("~/Views/Orcamento/_Create.cshtml", Model)



        </div>

        <div class="col-md-2" style="width: 180px; padding-left: 0px;">

            <div class="row">
                <label for="cpf-iniciativa">CPF</label>
                <input type="text" id="cpf-iniciativa" name="cpf-iniciativa" class="form-control" />
            </div>

            <div class="row">
                <label for="total-aprovado-ceti">Total Aprovado CETI</label>
                <div class="input-group">
                    <div class="input-group-addon">R$</div>
                    <input type="text" id="total-aprovado-ceti" name="total-aprovado-ceti" onkeypress="mascara( this, mvalor );" maxlength="14" class="form-control" />
                </div>
            </div>
            <div class="row">
                <label for="data-ceti">Data CETI</label>
                <input type="text" id="data-ceti" data-date="data" name="data-ceti" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />
            </div>

        </div>

    </div>

    <div class="row" style="padding-top:15px;">

        <div class="col-sm-2" style="padding-left:0">
            <label for="data-piloto">Piloto</label>
            <input type="text" id="data-piloto" name="data-piloto" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />
        </div>

        <div class="col-sm-2">
            <label for="tf-versao-agencia">TF Agencia</label>
            <input type="text" id="tf-versao-agencia" name="tf-versao-agencia" class="form-control" />
        </div>

        <div class="col-sm-2">
            <label for="tf-versao-pa">TF PA</label>
            <input type="text" id="tf-versao-pa" name="tf-versao-pa" class="form-control" />
        </div>

        <div class="col-md-2">
            <label for="ux">UX</label>
            <select id="ux" class="form-control">
                <option value="none"> - </option>
                <option value="true">Sim</option>
                <option value="false">Não</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="jornada-analisada">Jornada foi analisada?</label>
            <select id="jornada-analisada" class="form-control">
                <option value="none"> - </option>
                <option value="true">Sim</option>
                <option value="false">Não</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="inputEsteira">Mega</label>
            <select id="mega" class="form-control">
                <option value="none"> - </option>
                <option value="1">Mega XPTO</option>
                <option value="2">Mega XYZ</option>
            </select>

            @*@{Html.RenderAction("_ListaEsteiras", "Esteira");}*@
        </div>

    </div>

    <div class="row" style="padding-top:15px;">

        <div class="col-sm-2" style="padding-left:0">
            <label for="data-plenouso">Pleno Uso</label>
            <input type="text" id="pleno-uso" name="pleno-uso" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />
        </div>

        <div class="col-sm-2">
            <label for="data-comunicacao">Data Comunicação</label>
            <input type="text" id="data-comunicacao" name="data-comunicacao" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />
        </div>

        <div class="col-sm-2">
            <label for="data-visita">Data visita</label>
            <input type="text" id="data-visita" name="data-visita" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />
        </div>

        <div class="col-sm-2">
            <label for="agencia-visitada">Agência visitada</label>
            <input type="text" id="agencia-visitada" name="agencia-visitada" class="form-control" />
        </div>

        <div class="col-sm-2">
            <label for="responsavel-neg">Contato Negócio</label>
            <input type="text" id="responsavel-neg" name="responsavel-neg" class="form-control" />
        </div>

        <div class="col-sm-2">
            <label for="responsavel-ds">Contato DS</label>
            <input type="text" id="responsavel-ds" name="responsavel-ds" class="form-control" />
        </div>

    </div>

    <div style="padding-left:0; padding-top:2px; margin-left:0px">
        <button type="button" id="btn-toggle" class="btn btn-default btn-xs" data-element="#detalhesDiv">
            <span id="span-details-plus" class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Detalhes
        </button>
    </div>

    <div id="detalhesDiv" class="row" style="padding-top:15px; display:none">
        @{Html.RenderAction("_DetalhesIniciativa", "Iniciativa");}
    </div>


    <div class="row" style="padding-top:4px;">

        <div class="col-md-3" style="width: 226.5px;">

            <div class="row">
                <label for="usabilidade">Usabilidade</label>
                <select id="usabilidade" class="form-control" style="width: 211.5px;">
                    <option value="none"> - </option>
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
            </div>

            <div class="row" id="div-origem" style="border: 1px solid #ccc; border-image: none; width: 210.5px; padding-left:0px; padding-left:15px; padding-right: 0px; margin-top:22px; margin-right: 15px;">
                <div style="padding-top:15px;">
                    <label for="form-parcial-etapa" style=" padding-left: 0px; color:brown"> Origens:</label>
                </div>
                @{Html.RenderAction("_ListaOrigens", "Origem");}
            </div>
        </div>

        <div class="col-md-3" id="div-vertical" style="padding-left:15px; border: 1px solid #ccc; width: 210.5px; margin-top: 26px;">
            <div style="padding-top:15px;">
                <label for="form-parcial-etapa" style=" padding-left: 0px; color:brown"> Verticais:</label>
            </div>
            @{Html.RenderAction("_ListaVerticais", "Vertical");}
        </div>

        <div class="col-lg-3" style="width: 360px; padding-right: 0px;">
            <label style="margin-left:18px">Benefício:</label>
            <textarea id="beneficio-iniciativa" rows="10" class="form-control" style="height:179px; min-width: 100%; padding-top:0px;"></textarea>
        </div>

        <div class="col-lg-3" style="width: 372px;">
            <label style="margin-left:18px">Resumo:</label>
            <textarea id="resumo-iniciativa" rows="10" class="form-control" style="height:179px; min-width: 100%; padding-top:0px;"></textarea>
        </div>

    </div>
    <div class="pull-right">
        <button type="button" class="btn btn-default" id="update-iniciativa">
            <span class="glyphicon glyphicon-save"></span> Salvar
        </button>
    </div>

</form>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/JS/iniciativa.js"></script>
<script src="~/Scripts/JS/maskaras.js"></script>

<script>



    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(function () {
        $("#btn-toggle").click(function (e) {



            e.preventDefault();
            var plus = $("#span-details-plus").hasClass('glyphicon glyphicon-plus');


            if (plus) {
                $("#span-details-plus").removeClass();
                $("#span-details-plus").addClass('glyphicon glyphicon-minus');
            }
            else {

                $("#span-details-plus").removeClass();
                $("#span-details-plus").addClass('glyphicon glyphicon-plus');
            };
            el = $(this).data('element');
            $(el).toggle();

        });
    });
</script>





