@model NovoControleProjetos.Models.Replanejamento

@{
    Layout = null;
    var id = ViewBag.id_Iniciativa;

    var dtReplanejamento = Model.data_replanejamento != null ? Model.data_replanejamento.Value.ToShortDateString() : null;
}

