@{
    Layout = null;
}


<div class="form-group col-md-5" style=" border: 1px solid #ccc;  width: 661.32px; ">

    <div class="row" style="padding-top:15px;">
        <div class="col-md-4" style="width: 152.75px; padding-left: 0px;">
            <label for="form-parcial-etapa" style=" padding-left: 15px; color:brown"> Etapas:</label>
        </div>
        <div class="col-md-3">
            <label for="form-parcial-etapa-inicio" style=" padding-left: 15px; color:brown"> Início:</label>
        </div>
        <div class="col-md-3">
            <label for="form-parcial-etapa-fim" style=" padding-left: 15px; color:brown"> Fim:</label>
        </div>

    </div>

    @{Html.RenderAction("_ListaEtapas", "Etapa");}
   <br />

</div>

<div class="col-md-5" style=" border: 1px solid #ccc; margin-left: 5px;">

    <div class="row" style="padding: 15px">
        <label style="display:inline-block" for="data-replanejamento">Replanejamento</label>
        <input style="display:inline-block" type="text" id="data-replanejamento" name="data-replanejamento" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" placeholder="DD/MM/AAAA" />
    </div>

    <div class="row" style="padding: 15px">
        <label>Motivo:</label>
        <textarea id="motivo-replanejamento" rows="9" class="form-control" style="min-width: 90%;"></textarea>
    </div>

</div>

<div class="row">

    <div class="form-group col-md-5" style="margin-left: 15px; margin-top: 15px; border: 1px solid #ccc;  width: 661.32px; ">

        <div>
            <label for="form-parcial-etapa" style=" padding-left: 15px; color:brown"> Canal:</label>
        </div>

        @{Html.RenderAction("_ListaVerticais", "vertical");}

    </div>
       
    <div class="form-group col-md-5" style="  margin-left: 15px; border: 1px solid #ccc;  width: 487.32px; margin-left:5px; margin-top: 15px ">        

        <div class="row" style="padding: 15px;">
            <div>
                <label>MVP:</label>
            </div>
            <div class="col-md-6" style="padding-left:0;">
                <label for="mvp-nome">Nome</label>
                <input type="text" id="mvp-nome" name="mvp-nome" class="form-control" />
            </div>

            <div class="col-md-6">
                <label for="mvp-entrega">Entrega</label>
                <input type="text" id="mvp-entrega" name="mvp-entrega" onkeypress="mascara(this, mdata);" size="14" maxlength="10" class="form-control" />
            </div>

        </div>

    </div>

</div>



