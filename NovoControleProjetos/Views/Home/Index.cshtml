@model IEnumerable<NovoControleProjetos.Models.ViewModel.ProjetoEditarModelView>

@{
    ViewBag.Title = "Home Page";
    Html.RenderPartial("~/Views/Iniciativa/_InsertIniciativa.cshtml");
}

<div class="jumbotron">
    <h2>Painel administrativo</h2>
    <p class="lead">Acesso para manutenção e inclusão de novos projetos</p>
    <div class="btn-group">
        @Html.ActionLink("Inserir novo projeto", "Create", "Iniciativa", new { data_toggle = "modal", data_target = "#modalIniciativa", @class = "btn btn-primary btn-lg", @style = "margin: 0 15px" }) <font style="alinhamento vertical: herdar;"> <font style="alinhamento vertical: herdar;"></font></font>
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" style="margin:0 15px"><font style="alinhamento vertical: herdar;"> <font style="alinhamento vertical: herdar;">Editar projeto</font></font></button>
        <a href=@Url.Action("","") , type="button" class="btn btn-primary btn-lg" style="margin:0 15px"><font style="alinhamento vertical: herdar;"> <font style="alinhamento vertical: herdar;">Listar todos Projetos</font></font></a>
    </div>
</div>

<div class="jumbotron">
    <h2>Relatórios</h2>
    <p class="lead">Acesso de relatórios e gráficos dos projetos</p>
    <p><a href="#" class="btn btn-primary btn-lg">Acessar</a></p>
</div>




<div class="modal fade" tabindex="-1" id="myModal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                @using (Html.BeginForm("EditaProjeto", "Iniciativa"))
                {
                    @Html.DropDownList("idProjeto", new SelectList(Model, "IdProjeto", "NomeProjeto"), "Selecione um projeto...", new { style = "width:500px;", @class = "form-control" })
                    <div class="modal-footer">

                        <button type="submit" class="btn btn-primary">Confirmar</button>

                        <button type="button" class="btn btn-default " data-dismiss="modal">Cancelar</button>

                    </div>
                }
            </div>

        </div>
    </div>
</div>


<script src="~/Scripts/JS/iniciativa.js"></script>

